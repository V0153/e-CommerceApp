@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">

        <h2 class="text-primary">Kategori Listesi</h2>
        <a asp-action="Create" class="btn btn-secondary"> <i class="fa-solid fa-pen"></i> Yeni Oluştur</a>

    </div>
</div>
<div class="card card-body card text-white bg-black bg-opacity-50 mb-3">
    <table class="table table-hover table-bordered table-st">
    <thead>
         <tr class="table-dark">
            <th scope="row">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th scope="row">
                @Html.DisplayNameFor(model => model.OrderNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
{
        <tr>
            <td class="table-success">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="table-info">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="table-warning">
                @Html.DisplayFor(modelItem => item.OrderNo)
            </td>
            <td class="table-danger">
                 <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"> <i class="fas fa-edit"></i> Güncelle</a> |
                 <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>